import telebot

TOKEN = ''
bot = telebot.TeleBot(TOKEN)

user_data = {}

@bot.message_handler(commands=['start'])
def start_handler(message):
    bot.send_message(message.chat.id, "–ü—Ä–∏–≤–µ—Ç! –°–∫–∞–∂–∏, –ø–æ–∂–∞–ª—É–π—Å—Ç–∞, —Å–∫–æ–ª—å–∫–æ —Ç–µ–±–µ –ª–µ—Ç?")
    bot.register_next_step_handler(message, age_handler)

def age_handler(message):
    try:
        age = int(message.text)
        user_data[message.chat.id] = age

        if age < 10:
            send_fact_kids(message)
        else:
            send_fact_adults(message)
    except ValueError:
        bot.send_message(message.chat.id, "–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏ —á–∏—Å–ª–æ —Å–≤–æ–π –≤–æ–∑—Ä–∞—Å—Ç –∏–ª–∏ –Ω–∞–ø–∏—à–∏ –∫–æ–º–∞–Ω–¥—É info –∏ —É–∑–Ω–∞–µ—à—å —Å–ø–æ—Å–±–Ω–æ—Å—Ç–∏ –±–æ—Ç–∞.")
        bot.register_next_step_handler(message, age_handler)

def send_fact_kids(message):
    text = (
        "üå≥ –ü—Ä–∏–≤–µ—Ç! –î–∞–≤–∞–π –ø–æ–∏–≥—Ä–∞–µ–º –∏ —É–∑–Ω–∞–µ–º –ø—Ä–æ –Ω–∞—à—É –ø–ª–∞–Ω–µ—Ç—É!\n\n"
        "üåø –ó–Ω–∞–µ—à—å –ª–∏ —Ç—ã, —á—Ç–æ –¥–µ—Ä–µ–≤—å—è —ç—Ç–æ –∫–∞–∫ –ª–µ–≥–∫–∏–µ –ó–µ–º–ª–∏? –û–Ω–∏ –¥–∞—é—Ç –Ω–∞–º –≤–æ–∑–¥—É—Ö!\n"
        "‚ôªÔ∏è –ï—Å–ª–∏ –±—É–¥–µ–º –±–µ—Ä–µ—á—å –ø—Ä–∏—Ä–æ–¥—É, —Ç–æ –ø—Ç–∏—Ü—ã –∏ –∑–≤–µ—Ä–∏ —Å–º–æ–≥—É—Ç –∂–∏—Ç—å —Å—á–∞—Å—Ç–ª–∏–≤–µ–µ!\n"
        "üåé –ï—Å–ª–∏ –Ω–µ –±—É–¥–µ–º –∑–∞–±–æ—Ç–∏—Ç—å—Å—è, –ø—Ä–∏—Ä–æ–¥–∞ –º–æ–∂–µ—Ç –æ–≥–æ—Ä—á–∏—Ç—å—Å—è –∏ –ø–µ—Ä–µ—Å—Ç–∞—Ç—å —Ä–∞–¥–æ–≤–∞—Ç—å –Ω–∞—Å.\n"
        "üêæ –ê –µ—Å–ª–∏ —Å–æ–≤—Å–µ–º –∑–∞–ø—É—Å—Ç–∏–º –≤–º–µ—Å—Ç–æ –Ω–∞—Å –º–æ–≥—É—Ç –ø—Ä–∏–π—Ç–∏... –µ–Ω–æ—Ç—ã! ü¶ù (–Ω–æ –º—ã –≤–µ–¥—å —ç—Ç–æ–≥–æ –Ω–µ —Ö–æ—Ç–∏–º, –ø—Ä–∞–≤–¥–∞?)\n\n"
        "–î–∞–≤–∞–π –≤–º–µ—Å—Ç–µ –∑–∞–±–æ—Ç–∏—Ç—å—Å—è –æ –Ω–∞—à–µ–π –ø–ª–∞–Ω–µ—Ç–µ!"
    )
    bot.send_message(message.chat.id, text)

def send_fact_adults(message):
    text = (
        "–≠–∫–æ–ª–æ–≥–∏—è —ç—Ç–æ —Ç–æ, —á—Ç–æ –≤–ª–∏—è–µ—Ç –Ω–∞ –Ω–∞—à–µ –±—É–¥—É—â–µ–µ.\n\n"
        "–ó–∞–≤–æ–¥—ã –∏ –º–∞—à–∏–Ω—ã –∑–∞–≥—Ä—è–∑–Ω—è—é—Ç –≤–æ–∑–¥—É—Ö –∏ –≤–æ–¥—É. –≠—Ç–æ –ø—Ä–∏–≤–æ–¥–∏—Ç –∫ –∏–∑–º–µ–Ω–µ–Ω–∏—é –∫–ª–∏–º–∞—Ç–∞ –∏ –∏—Å—á–µ–∑–Ω–æ–≤–µ–Ω–∏—é –≤–∏–¥–æ–≤ –∂–∏–≤–æ—Ç–Ω—ã—Ö.\n"
        "–ï—Å–ª–∏ –Ω–µ –ø—Ä–∏–Ω–∏–º–∞—Ç—å –º–µ—Ä—ã, –ø–ª–∞–Ω–µ—Ç–∞ —Å—Ç–∞–Ω–µ—Ç –º–µ–Ω–µ–µ –ø—Ä–∏–≥–æ–¥–Ω–æ–π –¥–ª—è –∂–∏–∑–Ω–∏. –ú—ã –º–æ–∂–µ–º –ø—Ä–∏–π—Ç–∏ –∫ —ç–∫–æ–ª–æ–≥–∏—á–µ—Å–∫–æ–π –∫–∞—Ç–∞—Å—Ç—Ä–æ—Ñ–µ.\n"
        "–ù–æ –µ—Å–ª–∏ –∫–∞–∂–¥—ã–π –∏–∑ –Ω–∞—Å –Ω–∞—á–Ω—ë—Ç –∑–∞–±–æ—Ç–∏—Ç—å—Å—è –æ–± –æ–∫—Ä—É–∂–∞—é—â–µ–π —Å—Ä–µ–¥–µ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –º—É—Å–æ—Ä, —ç–∫–æ–Ω–æ–º–∏—Ç—å –≤–æ–¥—É –∏ —ç–Ω–µ—Ä–≥–∏—é, —Å–∞–∂–∞—Ç—å –¥–µ—Ä–µ–≤—å—è ‚Äî –º—ã —Å–º–æ–∂–µ–º –∏–∑–º–µ–Ω–∏—Ç—å —Å–∏—Ç—É–∞—Ü–∏—é.\n"
        "–∏–Ω–∞—á–µ –Ω–∞ —Å–º–µ–Ω—É —á–µ–ª–æ–≤–µ–∫—É –º–æ–≥—É—Ç –ø—Ä–∏–π—Ç–∏ –µ–Ω–æ—Ç—ã –ø—Ä–∏—Ä–æ–¥–∞ –Ω–∞–π–¥—ë—Ç –Ω–æ–≤—ã–µ –ø—É—Ç–∏, –Ω–æ –Ω–∞–º –≤–∞–∂–Ω–æ —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å –Ω–∞—à –¥–æ–º.\n\n"
        "–î–µ–π—Å—Ç–≤—É–π —Å–µ–≥–æ–¥–Ω—è —Ä–∞–¥–∏ —á–∏—Å—Ç–æ–≥–æ –∑–∞–≤—Ç—Ä–∞!"
    )
    bot.send_message(message.chat.id, text)

@bot.message_handler(commands=['heh'])
def send_heh(message):
    count_heh = int(message.text.split()[1]) if len(message.text.split()) > 1 else 5
    bot.reply_to(message, "he" * count_heh)

@bot.message_handler(commands=['bye'])
def send_bye(message):
    bot.reply_to(message, "–ü–æ–∫–∞! –£–¥–∞—á–∏!")

@bot.message_handler(commands=['random'])
def send_random(message):
    number = random.randint(1, 100)
    bot.reply_to(message, f"–¢–≤–æ–µ —Å–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ: {number}")

@bot.message_handler(commands=['info'])
def send_info(message):
    info_text = (
        "–Ø –ø—Ä–æ—Å—Ç–æ–π Telegram –±–æ—Ç –¥–ª—è –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏ –∫–æ–º–∞–Ω–¥.\n"
        "–ö–æ–º–∞–Ω–¥—ã:\n"
        "/heh –ø–æ–≤—Ç–æ—Ä—è–µ—Ç —Ñ—É–Ω–∫—Ü–∏—é he "
        "/quest –∫–≤–µ—Å—Ç—ã –ø–æ —ç–∫–æ–ª–æ–≥–∏–∏ "
        "/bye –ø—Ä–æ—â–∞–Ω–∏–µ "
        "/random - —Å–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 100 "
        "/info - –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ–±–æ –º–Ω–µ\n"
    )
    bot.reply_to(message, info_text)

quests = [
    "üåø–°–æ—Ä—Ç–∏—Ä—É–π –º—É—Å–æ—Ä —ç—Ç–æ –ø–æ–º–æ–≥–∞–µ—Ç –ø–µ—Ä–µ—Ä–∞–±–æ—Ç–∫–µ –∏ —Å–Ω–∏–∂–∞–µ—Ç –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ",
    "‚ö°Ô∏è–í—ã–∫–ª—é—á–∞–π —Å–≤–µ—Ç –∫–æ–≥–¥–∞ –≤—ã—Ö–æ–¥–∏—à—å –∏–∑ –∫–æ–º–Ω–∞—Ç—ã —ç–∫–æ–Ω–æ–º–∏—è —ç–Ω–µ—Ä–≥–∏–∏ —É–º–µ–Ω—å—à–∞–µ—Ç –≤—ã–±—Ä–æ—Å—ã CO2.",
    "üöØ–ù–µ –≤—ã–±—Ä–∞—Å—ã–≤–∞–π –±–∞—Ç–∞—Ä–µ–π–∫–∏ –≤ –æ–±—ã—á–Ω—ã–π –º—É—Å–æ—Ä –æ–Ω–∏ –æ—Ç—Ä–∞–≤–ª—è—é—Ç –ø–æ—á–≤—É –∏ –≤–æ–¥—É",
    "üå≥–ü–æ—Å–∞–¥–∏ –¥–µ—Ä–µ–≤–æ –∏–ª–∏ –∫–æ–º–Ω–∞—Ç–Ω–æ–µ —Ä–∞—Å—Ç–µ–Ω–∏–µ –æ–Ω–∏ –æ—á–∏—â–∞—é—Ç –≤–æ–∑–¥—É—Ö –∏ —É–ª—É—á—à–∞—é—Ç –º–∏–∫—Ä–æ–∫–ª–∏–º–∞—Ç",
    "üö∂‚Äç‚ôÇÔ∏è–ò—Å–ø–æ–ª—å–∑—É–π –æ–±—â–µ—Å—Ç–≤–µ–Ω–Ω—ã–π —Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç –∏–ª–∏ —Ö–æ–¥–∏ –ø–µ—à–∫–æ–º –¥–ª—è —Å–Ω–∏–∂–µ–Ω–∏—è –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏—è –≤–æ–∑–¥—É—Ö–∞",
    "üíß–ù–µ –æ—Å—Ç–∞–≤–ª—è–π –∫—Ä–∞–Ω –æ—Ç–∫—Ä—ã—Ç—ã–º –±–µ–∑ –Ω—É–∂–¥—ã —ç–∫–æ–Ω–æ–º—å –≤–æ–¥—É",
    "üì¶–°—Ç–∞—Ä–∞–π—Å—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –º–Ω–æ–≥–æ—Ä–∞–∑–æ–≤—ã–µ —Å—É–º–∫–∏ –≤–º–µ—Å—Ç–æ –ø–æ–ª–∏—ç—Ç–∏–ª–µ–Ω–æ–≤—ã—Ö –ø–∞–∫–µ—Ç–æ–≤",
    "üçÄ–ø–æ—Å–ª–µ –ø–∏–∫–Ω–∏–∫–æ–≤ –∏–ª–∏ –¥—Ä—É–≥–æ–≥ –æ—Ç–¥—ã—Ö–∞ –Ω–∞ –ø—Ä–∏—Ä–æ–¥–µ –≤—Å–µ–≥–¥–∞ –∑–∞ —Å–æ–±–æ–π —É–±–∏—Ä–∞–π ",
    "üóø–Ω–µ –≤—ã–±—Ä–∞—Å—ã–≤–∞–π —è–¥–µ—Ä–Ω—ã–µ –æ—Ç—Ö–æ–¥—ã –µ—Å–ª–∏ –Ω–µ —Ö–æ—á–µ—à—å —è–¥–µ—Ä–Ω—É—é –∑–∏–º—É"
]

@bot.message_handler(commands=['quest'])
def send_quest(message):
    quest = random.choice(quests)
    bot.send_message(message.chat.id, quest)



